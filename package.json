{
  "name": "site-management-cli",
  "version": "1.0.0",
  "description": "CLI tool to manage Plausible Analytics and Vercel projects",
  "main": "dist/index.js",
  "bin": {
    "sites-mcp": "./dist/index.js",
    "sites-mcp-server": "./dist/server.js",
    "plausible-cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "server": "ts-node src/server.ts",
    "inspector": "npx @modelcontextprotocol/inspector ts-node src/server.ts",
    "cli": "ts-node src/cli.ts",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@ai-sdk/react": "^1.2.7",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@openrouter/ai-sdk-provider": "^0.4.5",
    "ai": "^4.2.9",
    "chalk": "^4.1.2",
    "chartscii": "^3.1.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "dotenv": "^16.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
